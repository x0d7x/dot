{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "github": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  },
  "theme": "system",
  "default_agent": "plan",
  "autoshare": false,
  "autoupdate": "notify"
}
